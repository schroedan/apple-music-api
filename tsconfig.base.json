{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2021",
    "module": "esnext",
    "lib": ["es2021"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@schroedan/apple-music-api": ["packages/apple-music-api/api.ts"],
      "@schroedan/apple-music-api-client": [
        "packages/apple-music-api-client/index.ts"
      ]
    },
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "tmp"]
}
